
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<h5>A simple form for first demos.</h5>

<h4>
    Please enter the following info to register for an account.
</h4>
<form id="form1" method="POST">
    <div class="fitem">
        <label for="emailAddress">Enter your email address:</label><input type="text" id="emailAddress" class="w200"/>
    </div>
    <div class="fitem">
        <label for="emailAddress2">Re-enter your email address:</label><input type="text" id="emailAddress2" class="w200"/>
    </div>
    <div class="fitem">
        <label for="password">Enter password:</label><input type="password" id="password" />
    </div>
    <div class="fitem">
        <label for="password2">Re-enter password:</label><input type="password" id="password2" />
    </div>
    <div class="fitem">
        <label for="terms">Terms and conditions:</label><input type="checkbox" id="terms" /><span>I accept</span>
    </div>
    <div class="fitem">
        <label></label><input type="button" id="continue" value="Continue" />
    </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function() {
            $("#continue").click(function() {
                $("#form1").submit();
            });
        });
    </script>
}

